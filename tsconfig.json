{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": "./assets/ts",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["jest", "node"]
  },
  "exclude": ["assets/ts/setup.ts", "dist", "node_modules"],
  "include": ["./assets/ts"]
}
